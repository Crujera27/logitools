<!DOCTYPE html>
<html class="h-100">
  <head>
    <title><%= app.dashboard_name %> - <%= t.pages.admin_portal %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/public/css/style.css" />
  </head>

  <body>
    <%- include('../inc/admin-navbar.ejs') %>
    <main>
      <div class="container mt-5">
        <% if (user.discriminator==="0" ) { %>
        <h1><%= t.pages.admin_greeting.replace('{username}', user.username) %></h1>
        <p><%= t.pages.admin_welcome_message %></p>
        <% } else { %>
        <h1><%= t.pages.admin_greeting.replace('{username}', `${user.username}#${user.discriminator}`) %></h1>
        <p><%= t.pages.admin_welcome_message %></p>
        <% } %>
      </div>
      <div class="container">
        <div class="row">
          <div class="col-12 col-md-6">
            <div class="dashboard-card">
              <h2><%= t.sections.whats_new %> (v<%= version %>)</h2>
              <p><%= versionnotes %></p>
            </div>
          </div>
          <div class="col-12 col-md-6">
            <div class="dashboard-card">
              <h2><%= t.sections.instance_info %></h2>
              <table class="table table-dark">
                <tbody>
                  <tr>
                    <td><%= t.instance_info.app_name %>:</td>
                    <td><%= appname %></td>
                  </tr>
                  <tr>
                    <td><%= t.instance_info.app_version %>:</td>
                    <td><%= version %></td>
                  </tr>
                  <tr>
                    <td><%= t.instance_info.host_os %>:</td>
                    <td><%= ostype %></td>
                  </tr>
                  <tr>
                    <td><%= t.instance_info.host_os_version %>:</td>
                    <td><%= osrelase %></td>
                  </tr>
                  <tr>
                    <td><%= t.instance_info.host_name %>:</td>
                    <td><%= oshostname %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="row mt-4">
          <div class="col-12">
            <div class="dashboard-card resources-card">
              <h2><%= t.sections.resources %></h2>
              <div class="d-flex flex-wrap gap-3 justify-content-center">
                <a href="https://github.com/Crujera27/logitools" class="btn btn-primary">
                  <i class="fab fa-github me-2"></i>GitHub
                </a>
                <a href="https://github.com/Crujera27/logitools" class="btn btn-primary">
                  <i class="fas fa-book me-2"></i><%= t.sections.documentation %>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>