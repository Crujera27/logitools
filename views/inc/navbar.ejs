<link rel="stylesheet" href="/public/css/navbar.css" />
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><%= app.dashboard_name %></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/history"><%= t.navigation.history %></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/support"><%= t.navigation.tickets %></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/moderation"><%= t.navigation.moderation %></a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" 
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <img class="avatar rounded-circle me-2" width="32" height="32"
                             src="https://cdn.discordapp.com/avatars/<%= user.discord_id %>/<%= user.avatar_uuid %>.png" 
                             alt="Avatar">
                        <% if (user.discriminator==="0" ) { %>
                            @<%= user.username %>
                        <% } %>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                        <li><a class="dropdown-item" href="/settings"><i class="fas fa-cog"></i> <%= t.navigation.settings %></a></li>
                        <% if (user.isStaff) { %>
                            <li><a class="dropdown-item" href="/staff"><i class="fas fa-shield-alt"></i> <%= t.navigation.staff_panel %></a></li>
                        <% } %>
                        <% if (user.isAdmin) { %>
                            <li><a class="dropdown-item" href="/admin"><i class="fas fa-user-shield"></i> <%= t.navigation.admin_panel %></a></li>
                        <% } %>
                        <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> <%= t.navigation.logout %></a></li>
                    </ul>
                </li>
            </ul>
        </div>
