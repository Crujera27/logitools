<link rel="stylesheet" href="/public/css/navbar.css">
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/staff"><%= app.dashboard_name %></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
      aria-controls="navbarCollapse" aria-expanded="false" aria-label="<%= t.staff_navigation.toggle_nav %>">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="/staff/punishmentmanager"><%= t.staff_navigation.punishment_manager %></a>
        </li>
        <!-- Pospuesto para una futura versiÃ³n
        <li class="nav-item">
          <a class="nav-link" href="/staff/ticketmanager"><%= t.staff_navigation.ticket_manager %></a>
        </li>
        -->
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown"
            aria-expanded="false">
            <% if (user.discriminator==="0" ) { %>
              <img class="avatar rounded-circle me-2"
                src="https://cdn.discordapp.com/avatars/<%= user.discord_id %>/<%= user.avatar_uuid %>.png" alt="Avatar">
              @<%= user.username %>
            <% } else { %>
              <img class="avatar rounded-circle me-2"
                src="https://cdn.discordapp.com/avatars/<%= user.discord_id %>/<%= user.avatar_uuid %>.png" alt="Avatar">
              @<%= user.username %>#<%= user.discriminator %>
            <% } %>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
            <% if (user.isStaff) { %>
              <li><a class="dropdown-item" href="/dashboard"><%= t.staff_navigation.close_staff_panel %></a></li>
            <% } %>
            <% if (user.isAdmin) { %>
              <li><a class="dropdown-item" href="/admin"><%= t.staff_navigation.admin_panel %></a></li>
            <% } %>
            <li><a class="dropdown-item" href="/logout"><%= t.staff_navigation.logout %></a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>