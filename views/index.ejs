<!DOCTYPE html>
<html>
  <head>
    <title><%= app.dashboard_name %> - <%= t.pages.dashboard %></title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <script src="../public/js/popup-manager.js"></script>
    <script src="../public/js/video.js"></script>
    <link rel="stylesheet" href="/public/css/style.css" />
  </head>

  <body>
    <%- include('./inc/navbar.ejs') %>
    <section id="popAlert">
      <aside>
        <h2><%= t.alerts.beta_title %></h2>
        <p style="color: black;"><%- t.alerts.beta_message.replace('{link}', '<a href="https://github.com/Crujera27/logitools" style="color: purple;">Logitools</a>').replace('{github}', '<a style="color: purple;" href="https://github.com/Crujera27/logitools/issues">GitHub</a>') %></p>
        <button type="button" onclick="togglePop()"><%= t.alerts.beta_accept %></button>
      </aside>
    </section>
    <div class="container mt-5">
      <% if (user.discriminator==="0" ) { %>
        <h1><%= t.pages.welcome_user.replace('{username}', user.username) %></h1>
      <% } else { %>
        <h1><%= t.pages.welcome_user.replace('{username}', `${user.username}#${user.discriminator}`) %></h1>
      <% } %>
      <p><%= t.pages.welcome_message %></p>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-12 col-md-6">
          <div class="dashboard-card">
            <h2><%= t.sections.whats_new %></h2>
            <p><%- relasenotes %></p>
            <a href="https://github.com/Crujera27/logitools/releases/tag/v<%= version %>" class="button"><%= t.sections.read_more %></a>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div class="popular-links-card">
            <h2><%= t.sections.popular_links %></h2>
            <div class="popular-links">
              <a href="https://discord.gg/2kPR5jyhR9" class="popular-link">Servidor de Discord</a>
              <a href="https://www.youtube.com/@LogikkYT" class="popular-link">YouTube</a>
              <a href="https://twitter.com/logikk4" class="popular-link">Twitter</a>
              <a href="https://www.twitch.tv/logikkyt" class="popular-link">Twitch</a>
              <a href="https://www.youtube.com/watch?v=y8rwf71cO-M" class="popular-link">VÃ­deo Natro Macro</a>
            </div>
          </div>
        </div>
        <div class="col-12">
          <div class="featured-video-card">
            <h2><%= t.sections.featured_video %></h2>
            <div class="featured-video">
              <iframe
                id="randomVideo"
                width="854"
                height="480"
                frameborder="0"
                allowfullscreen
              ></iframe>
            </div>
          </div>
        </div>
        <div class="col-12">
          <% if (app.web.server_id) { %>
            <div class="popular-links-card">
              <h2><%= t.sections.discord_economy %></h2>
              <div class="featured-video">
                <iframe
                  src="https://unbelievaboat.com/leaderboard/<%= app.web.server_id %>/widget"
                  width="450"
                  height="500"
                  style="border: 0"
                ></iframe>
              </div>
            </div>
          <% } %>
        </div>
        
        <div class="col-12">
          <% if (app.web.server_id) { %>
            <div class="popular-links-card">
              <h2><%= t.sections.discord_levels %></h2>
              <div class="featured-video">
                <iframe
                  src="https://gdcolon.com/polaris/leaderboard/<%= app.web.server_id %>"
                  width="450"
                  height="500"
                  style="border: 0"
                ></iframe>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    <%- include('./inc/footer.ejs') %>
    
    <% if (isBeta) { %>
      <script>
         togglePop()           
      </script>
    <% } %>
  </body>
</html>