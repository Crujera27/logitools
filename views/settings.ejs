<!DOCTYPE html>
<html>
<head>
    <title><%= app.dashboard_name %> - <%= t.pages.settings %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/public/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" defer></script>
</head>

<body>
    <%- include('./inc/navbar.ejs') %>

    <div class="container py-5">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-4"><%= t.pages.settings %></h1>
            </div>
        </div>

        <!-- Settings Form -->
        <div class="row">
            <div class="col-12 col-lg-8">
                <!-- Alert Messages -->
                <% if (query.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= t.alerts.settings_saved %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (query.error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= t.alerts.settings_error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Interface Settings -->
                <div class="dashboard-card mb-4">
                    <h2><i class="fas fa-palette"></i> <%= t.settings.interface %></h2>
                    <form action="/settings/update" method="POST">
                        <div class="mb-3">
                            <label class="form-label"><%= t.settings.language %></label>
                            <select class="form-select" name="language">
                                <option value="en-EN" <%= settings.language === 'en-EN' ? 'selected' : '' %>>English</option>
                                <option value="es-ES" <%= settings.language === 'es-ES' ? 'selected' : '' %>>Espa√±ol</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary"><%= t.buttons.save_changes %></button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</body>
</html>