<!DOCTYPE html>
<html>
<head>
    <title><%= app.dashboard_name %> - <%= t.pages.support %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>
    <link rel="stylesheet" href="/public/css/style.css"/>
</head>
<body>
    <%- include('./inc/navbar.ejs') %>
    
    <div class="container py-5">
        <!-- Header Section -->
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-4 text-light mb-0">
                    <%= t.pages.support_greeting.replace('{username}', 
                        user.discriminator === "0" ? 
                        user.username : 
                        `${user.username}#${user.discriminator}`) %>
                </h1>
            </div>
        </div>

        <!-- New Ticket Button -->
        <div class="row mb-4">
            <div class="col-12">
                <a href="/support/newticket" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i><%= t.buttons.new_ticket %>
                </a>
            </div>
        </div>

        <!-- Tickets Table -->
        <div class="dashboard-card">
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th scope="col" class="border-0"><%= t.table.ticket_id %></th>
                            <th scope="col" class="border-0"><%= t.table.ticket_status %></th>
                            <th scope="col" class="border-0 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (userTickets.length > 0) { %>
                            <% userTickets.forEach((ticket) => { %>
                                <tr>
                                    <td>#<%= ticket.ticket_id %></td>
                                    <td>
                                        <span class="badge bg-<%= ticket.ticket_status === 'open' ? 'success' : 'secondary' %>">
                                            <%= ticket.ticket_status %>
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a href="/support/view/<%= ticket.ticket_id %>" 
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye me-1"></i><%= t.buttons.view_ticket %>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    <i class="fas fa-ticket fa-2x mb-2"></i>
                                    <p class="mb-0"><%= t.pages.no_tickets %></p>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>