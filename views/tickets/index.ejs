<!DOCTYPE html>
<html>
<head>
    <title><%= app.dashboard_name %> - <%= t.pages.tickets %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/public/css/style.css">
</head>

<body>
    <%- include('../inc/navbar.ejs') %>
    
    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-4 mb-3"><%= t.pages.tickets %></h1>
                <p class="lead"><%= t.pages.tickets_description %></p>
            </div>
        </div>

        <div class="dashboard-card p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0"><%= t.tickets.all_tickets %></h2>
                <div class="btn-group">
                    <button class="btn btn-outline-secondary" onclick="filterTickets('all')"><%= t.tickets.filter_all %></button>
                    <button class="btn btn-outline-success" onclick="filterTickets('open')"><%= t.tickets.filter_open %></button>
                    <button class="btn btn-outline-secondary" onclick="filterTickets('closed')"><%= t.tickets.filter_closed %></button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle">
                    <thead>
                        <tr>
                            <th scope="col"># <%= t.tickets.id %></th>
                            <th scope="col"><%= t.tickets.subject %></th>
                            <th scope="col"><%= t.tickets.created_at %></th>
                            <th scope="col"><%= t.tickets.status %></th>
                            <th scope="col" class="text-end"><%= t.tickets.actions %></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (!tickets || tickets.length === 0) { %>
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <i class="fas fa-ticket-alt fa-2x mb-3 text-muted"></i>
                                    <p class="mb-0"><%= t.tickets.no_tickets %></p>
                                    <a href="/support/new" class="btn btn-primary mt-3">
                                        <i class="fas fa-plus me-2"></i><%= t.tickets.create_new %>
                                    </a>
                                </td>
                            </tr>
                        <% } else { %>
                            <% tickets.forEach(ticket => { %>
                                <tr class="ticket-row" data-status="<%= ticket.ticket_status %>">
                                    <td><%= ticket.ticket_id %></td>
                                    <td><%= ticket.subject || t.tickets.no_subject %></td>
                                    <td><%= new Date(ticket.created_at).toLocaleDateString() %></td>
                                    <td>
                                        <span class="badge bg-<%= ticket.ticket_status === 'open' ? 'success' : 'secondary' %>">
                                            <%= ticket.ticket_status %>
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a href="/support/view/<%= ticket.ticket_id %>" class="btn btn-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i> <%= t.tickets.view %>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <% if (tickets && tickets.length > 0) { %>
                <div class="text-end mt-4">
                    <a href="/support/new" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i><%= t.tickets.create_new %>
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function filterTickets(status) {
            const rows = document.querySelectorAll('.ticket-row');
            rows.forEach(row => {
                if (status === 'all' || row.dataset.status === status) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>
