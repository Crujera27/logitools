<!DOCTYPE html>
<html>
<head>
    <title><%= app.dashboard_name %> - <%= t.tickets.create_new %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <%- include('../inc/navbar.ejs') %>
    
    <div class="container mt-5">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-4"><%= t.tickets.create_new %></h1>
                <p class="lead"><%= t.tickets.create_description %></p>
            </div>
        </div>

        <div class="dashboard-card">
            <form action="/support/new" method="POST">
                <div class="mb-3">
                    <label for="subject" class="form-label"><%= t.tickets.subject %></label>
                    <input type="text" class="form-control" id="subject" name="subject" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label"><%= t.tickets.message %></label>
                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-paper-plane me-2"></i><%= t.tickets.submit %>
                </button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
